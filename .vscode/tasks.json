{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Config: Debug",
            "type": "shell",
            "command": "${config:build_folder_debug} ${config:cmake_command_debug}",
            "options": {"cwd": "${workspaceFolder}"},
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
            },
            "problemMatcher": [],
        },
        {
            "label": "CMake Config: Release",
            "type": "shell",
            "command": "${config:build_folder_release} ${config:cmake_command_release}",
            "options": {"cwd": "${workspaceFolder}"},
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
            },
            "problemMatcher": [],
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "linux": { "command": "${config:build_folder_debug} if [ ! -f CMakeCache.txt ]; then ${config:cmake_command_debug} fi; cmake --build . -j"},
            "windows": { "command": "${config:build_folder_debug} if [ ! -f CMakeCache.txt ]; then ${config:cmake_command_debug} fi; cmake --build . -j"},
            "options": {"cwd": "${workspaceFolder}"},
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
            },
            "problemMatcher": ["$gcc"],
            "group": "build"
        }
    ],
}