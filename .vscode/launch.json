{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Debug Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/Debug/app/app",
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
        }
    ]
}